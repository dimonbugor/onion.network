<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Фоновий колір -->
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_variant</item>
        <item name="colorAccent">@color/accent_dark</item>

        <!-- Колір тексту -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Колір панелі дій -->
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>

    <!-- Стиль для панелі дій -->
    <style name="DarkActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/actionbar_bg_dark</item>
        <item name="android:titleTextStyle">@style/DarkActionBarTitleText</item>
    </style>

    <style name="DarkActionBarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/actionbar_title_text_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Widget.AppTheme.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Стиль для діалогу з заокругленими кутами для теми AppCompat -->
    <style name="RoundedAlertDialog" parent="Theme.AppCompat.Dialog">
        <!-- Прозорий фон діалогу -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Використання кастомного фону з заокругленими кутами -->
        <item name="android:background">@drawable/rounded_dialog</item>
        <!-- Відключення стандартних полів діалогу -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>
