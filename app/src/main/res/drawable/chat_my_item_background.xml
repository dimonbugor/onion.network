<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Frosted incoming bubble -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#66FFFFFF"
                android:centerColor="#40F2F7FF"
                android:endColor="#1AFFFFFF" />
            <corners
                android:topLeftRadius="@dimen/dp16"
                android:topRightRadius="@dimen/dp16"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="@dimen/dp16" />
            <stroke
                android:width="1dp"
                android:color="#26A4D6FF" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:endColor="#335BC4FF" />
            <corners
                android:topLeftRadius="@dimen/dp16"
                android:topRightRadius="@dimen/dp16"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="@dimen/dp16" />
        </shape>
    </item>
</layer-list>
