<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Frosted silver body -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#33FFFFFF"
                android:centerColor="#66F2F2F2"
                android:endColor="#33E0E0E0" />
            <corners android:radius="18dp" />
            <stroke
                android:width="1dp"
                android:color="#33999999" />
        </shape>
    </item>

    <!-- Upper highlight -->
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Lower grounding -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00CFCFCF"
                android:endColor="#33CFCFCF" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Inner glow -->
    <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#0DFFFFFF" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
