<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base translucent indigo body -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#3D1F2D52"
                android:centerColor="#6610213F"
                android:endColor="#3310213F" />
            <corners android:radius="18dp" />
            <stroke
                android:width="1dp"
                android:color="#4D5AF2FF" />
        </shape>
    </item>

    <!-- Soft highlight across the top edge -->
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Cyan glow anchoring bottom edge -->
    <item android:gravity="bottom" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#005AF2FF"
                android:endColor="#335AF2FF" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Inner subtle glass sheen -->
    <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#14000000" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
