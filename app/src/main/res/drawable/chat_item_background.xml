<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Vibrant outgoing bubble -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#665AF2FF"
                android:centerColor="#4C4F9DFF"
                android:endColor="#40324E80" />
            <corners
                android:topLeftRadius="@dimen/dp16"
                android:topRightRadius="@dimen/dp16"
                android:bottomLeftRadius="@dimen/dp16"
                android:bottomRightRadius="0dp" />
            <stroke
                android:width="1dp"
                android:color="#4D9FE7FF" />
        </shape>
    </item>
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners
                android:topLeftRadius="@dimen/dp16"
                android:topRightRadius="@dimen/dp16"
                android:bottomLeftRadius="@dimen/dp16"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
</layer-list>
