<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep charcoal gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#101010"
                android:centerColor="#090909"
                android:endColor="#030303" />
        </shape>
    </item>

    <!-- Soft radial lift -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="420dp"
                android:centerX="0.75"
                android:centerY="0.2"
                android:startColor="#33252525"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Subtle vertical sheen -->
    <item android:left="120dp" android:right="120dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00181818"
                android:centerColor="#33181818"
                android:endColor="#00181818" />
        </shape>
    </item>
</layer-list>
