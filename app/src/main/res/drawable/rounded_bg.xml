<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Колір фону діалогу -->
            <gradient
                android:angle="90"
                android:endColor="@color/colorBackgroundAlpha"
                android:centerColor="@color/colorPrimaryContainerAlpha"
                android:startColor="@android:color/transparent"
                />
            <!-- Радіус заокруглення кутів -->
            <corners android:radius="@dimen/dp16" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        >
        <shape android:shape="rectangle">
            <!-- Колір фону діалогу -->
            <solid android:color="@android:color/transparent" />
            <!-- Радіус заокруглення кутів -->
            <corners android:radius="@dimen/dp16" />
        </shape>
    </item>
</layer-list>