<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Soft grey gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FFFFFF"
                android:centerColor="#F3F3F3"
                android:endColor="#E7E7E7" />
        </shape>
    </item>

    <!-- Gentle radial glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="420dp"
                android:centerX="0.7"
                android:centerY="0.15"
                android:startColor="#19999999"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- Narrow vertical highlight -->
    <item android:left="100dp" android:right="100dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:centerColor="#1AFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
