<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="@dimen/dp4">

    <FrameLayout
        android:id="@+id/left"
        android:layout_width="@dimen/dp72"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/abort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:alpha="0.5"
            android:background="?selectableItemBackground"
            android:padding="@dimen/dp4"
            android:scaleType="center"
            android:src="@drawable/ic_close"
            app:tint="?attr/colorOnBackground" />

    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:strokeWidth="0dp"
        app:cardElevation="0dp"
        app:background="@drawable/chat_item_background"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/cardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp4">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="12sp"
                 />

            <FrameLayout
                android:id="@+id/attachmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/attachmentImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/chat_item_background" />

                <ImageView
                    android:id="@+id/attachmentVideoBadge"
                    android:layout_width="@dimen/dp36"
                    android:layout_height="@dimen/dp36"
                    android:layout_gravity="center"
                    android:alpha="0.85"
                    android:padding="@dimen/dp4"
                    android:src="@drawable/ic_videocam"
                    android:visibility="gone"
                    app:tint="@android:color/white" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/audioRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp8"
                android:paddingVertical="@dimen/dp4"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/audioPlay"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp32"
                    android:background="?selectableItemBackground"
                    android:contentDescription="@string/chat_audio_play"
                    android:src="@drawable/ic_play"
                    app:tint="?attr/colorOnBackground" />

                <TextView
                    android:id="@+id/audioDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="@dimen/sp12"
                    tools:text="0:24" />

                <TextView
                    android:id="@+id/audioStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_weight="1"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="@dimen/sp12"
                    tools:text="Voice message" />

            </LinearLayout>

        <LinearLayout
            android:id="@+id/metaRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp4">
            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:layout_weight="1"
                android:fontFamily="@font/geologica_400"
                android:text="ahliuh"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|bottom"
                android:singleLine="true"
                android:text="1234-12-12 12:12"
                android:textColor="?attr/white_50"
                android:fontFamily="@font/geologica_400"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
        </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:id="@+id/right"
        android:layout_width="@dimen/dp72"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
